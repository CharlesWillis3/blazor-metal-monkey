@inject MetalMonkey.Core.Interop.ResourceLoader ResourceLoader

@code {

    [Parameter]
    public string? Src { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && Uri.TryCreate(this.Src, UriKind.Relative, out Uri srcUri))
        {
            await this.ResourceLoader.LoadJsAsync(srcUri);
        }
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender && Uri.TryCreate(this.Src, UriKind.Relative, out Uri srcUri))
        {
            this.ResourceLoader.LoadJs(srcUri);
        }
    }
}
